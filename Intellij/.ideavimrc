Plug 'tpope/vim-surround'
Plug 'tpope/vim-commentary'

let mapleader = " "
set showmode
set showcmd
set surround
set rnu
set nu
set ideajoin
set incsearch
set hlsearch
set ignorecase
set clipboard+=unnamed

nnoremap <leader>p :action PreviousTab<CR>
nnoremap <leader>n :action NextTab<CR>
nnoremap <leader>v :action SplitVertically<CR>
nnoremap <leader>h :action SplitHorizontally<CR>
nnoremap <leader>o :action Unsplit<CR>

nnoremap <c-h> <c-w>h
nnoremap <c-l> <c-w>l
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k

nnoremap <leader>k :action CloseContent<CR>

nnoremap <Leader>=  :action ReformatCode<CR>
nnoremap <leader>r :action Refactorings.QuickListPopupAction<CR>

nnoremap zc :action CollapseRegion<CR>
nnoremap zo :action ExpandRegion<CR>

nnoremap <leader>ff :action GotoFile<CR>
nnoremap <leader>gr :action FindUsages<CR>

nnoremap gd :action GotoDeclaration<CR>
nnoremap <c-x> :action HideAllWindows<CR>